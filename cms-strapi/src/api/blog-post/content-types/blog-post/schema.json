{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": "Blog posts for Odontoa website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "read_time": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "main_content": {
      "type": "richtext",
      "required": true
    },
    "faq": {
      "type": "component",
      "repeatable": true,
      "component": "blog.faq-item",
      "required": false
    },
    "seo_schema": {
      "type": "json",
      "required": false
    },
    "datePublished": {
      "type": "datetime",
      "required": false
    },
    "dateModified": {
      "type": "datetime",
      "required": false
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "blog_posts"
    }
  }
}
